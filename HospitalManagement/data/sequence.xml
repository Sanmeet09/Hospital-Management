<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="1">

        <!-- Sequences for patients.details-->
        <record id="seq_patients_details" model="ir.sequence">
            <field name="name">patient</field>
            <field name="code">patients.details</field>
            <field name="prefix">PAT</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_patient_appointment" model="ir.sequence">
            <field name="name">appointment</field>
            <field name="code">patient.appointment</field>
            <field name="prefix">AP</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>